@page "/forum/{forumId:guid}/post"
@page "/forum/{forumId:guid}/post/{topicid:guid}/edit"
@inherits PostPage

@if (Model == null)
{
    <Loading />
}
else
{
    if (DisplayPage)
    {
        @AddComponent("Post", new Dictionary<string, object>
        {
            { nameof(Model), Model },
            { nameof(ForumId), ForumId },
            { nameof(TopicId), TopicId }
        })
    }
    else
    {
        <SomethingWrong />
    }
}
