@page "/forum/{id:guid}"
@inherits ForumPage

@if (Model == null)
{
    <Loading />
}
else
{
    if (DisplayPage)
    {
        @AddComponent("Forum", new Dictionary<string, object>
        {
            { nameof(Model), Model },
            { nameof(Id), Id }
        })
    }
    else
    {
        <SomethingWrong />
    }
}