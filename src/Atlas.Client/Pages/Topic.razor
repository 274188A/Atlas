@page "/forum/{forumId:guid}/{topicId:guid}"
@inherits TopicPage

@if (Model == null)
{
    <Loading />
}
else
{
    if (DisplayPage)
    {
        @AddComponent("Topic", new Dictionary<string, object>
        {
            { nameof(Model), Model },
            { nameof(ForumId), ForumId },
            { nameof(TopicId), TopicId }
        })
    }
    else
    {
        <SomethingWrong />
    }
}
