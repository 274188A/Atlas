@layout AdminLayout
@page "/admin/permission-sets"
@using Atlas.Models.Admin.PermissionSets
@attribute [Authorize(Policy = "Admin")]
@inject HttpClient Http
@inject IStringLocalizer<AdminResources> Loc

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">@Loc["Home"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Loc["Permission Sets"]</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6">
        <h3 class="mb-3">@Loc["Permission Sets"]</h3>
    </div>
    <div class="col-md-6 text-right mb-3">
        <a href="/admin/permission-sets/create" class="btn btn-primary" role="button">@Loc["Create New"]</a>
    </div>
</div>

@if (Model == null)
{
    <Loading />
}
else if (Model.PermissionSets.Count == 0)
{
    <NoRecords />
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">@Loc["Name"]</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PermissionSets)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a href="/admin/permission-sets/edit/@item.Id" class="btn btn-secondary" role="button">@Loc["Edit"]</a>
                        @if (!item.IsInUse)
                        {
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirm-modal" data-id="@item.Id" @onclick="() => SetDeleteId(item.Id)">@Loc["Delete"]</button>
                        }
                        else
                        {
                    <a href="#" role="button" class="btn btn-danger disabled">@Loc["Delete"]</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <ConfirmModal Title="@Loc["Delete"]"
                  Body="@Loc["Are you sure you want to delete this permission set?"]"
                  Button="@Loc["Delete"]"
                  OnClickCallback="@DeleteAsync" />
}

@code {
    private IndexPageModel Model { get; set; }
    private Guid DeleteId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Model = await Http.GetFromJsonAsync<IndexPageModel>("api/admin/permission-sets/list");
    }

    protected void SetDeleteId(Guid Id)
    {
        DeleteId = Id;
    }

    protected async Task DeleteAsync(MouseEventArgs e)
    {
        await Http.DeleteAsync($"api/admin/permission-sets/delete/{DeleteId}");
        await OnInitializedAsync();
    }
}
