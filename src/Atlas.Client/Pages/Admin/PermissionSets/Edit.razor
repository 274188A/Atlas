@layout AdminLayout
@page "/admin/permission-sets/edit/{id:guid}"
@using Atlas.Models.Admin.PermissionSets
@attribute [Authorize(Policy = "Admin")]
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IStringLocalizer<AdminResources> Loc

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">@Loc["Home"]</a></li>
        <li class="breadcrumb-item"><a href="/admin/permission-sets">@Loc["Permission Sets"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Loc["Edit Permission Set"]</li>
    </ol>
</nav>

<h3 class="mb-3">@Loc["Edit Permission Set"]</h3>

@if (Model == null)
{
    <Loading />
}
else
{
    <Form Model="Model" Button="@Loc["Update"]" OnValidSubmit="@UpdateAsync"></Form>
    <TargetEvents Id="Id"></TargetEvents>
}

@code {
    [Parameter] public Guid Id { get; set; }
    private FormComponentModel Model { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        Model = await Http.GetFromJsonAsync<FormComponentModel>($"api/admin/permission-sets/edit/{Id}");
    }

    private async Task UpdateAsync()
    {
        await Http.PostAsJsonAsync($"api/admin/permission-sets/update", Model.PermissionSet);
        NavigationManager.NavigateTo("/admin/permission-sets");
    }
}
