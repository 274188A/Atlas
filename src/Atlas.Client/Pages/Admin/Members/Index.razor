@page "/admin/members"

@inherits Atlas.Client.Components.Admin.Members.IndexPage

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">@Loc["Home"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Loc["Members"]</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6">
        <h3 class="mb-3">@Loc["Members"]</h3>
    </div>
    <div class="col-md-6 text-right mb-3">
        <a href="/admin/members/create" class="btn btn-primary" role="button">@Loc["Create New"]</a>
    </div>
</div>

@if (Model == null)
{
    <Loading />
}
else
{
    <div class="row">
        <div class="col-md-6 input-group mb-3">
            <input type="text" class="form-control" placeholder="@Loc["Search members"]" @bind-value="Search" @bind-value:event="oninput" @onkeyup="MyKeyUpAsync">
            <button class="btn bg-transparent text-secondary" style="margin-left: -40px; z-index: 100;" @onclick="@(async () => await ClearSearchAsync())">
                <i class="fa fa-times"></i>
            </button>
            <div class="input-group-append">
                <button class="btn btn-secondary" type="button" @onclick="@(async () => await SearchAsync())">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
    </div>

    <a id="members"></a>

    @if (Model.Members == null)
    {
        <Loading />
    }
    else
    {
        if (Model.Members.Items.Count == 0)
        {
            <NoRecords />
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">@Loc["Display Name"]</th>
                        <th scope="col">@Loc["Email"]</th>
                        <th scope="col" class="text-center">@Loc["Total Topics"]</th>
                        <th scope="col" class="text-center">@Loc["Total Replies"]</th>
                        <th scope="col" class="text-center">@Loc["Status"]</th>
                        <th scope="col">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Members.Items)
                    {
                        <tr>
                            <td>@item.DisplayName</td>
                            <td>@item.Email</td>
                            <td class="text-center">@item.TotalTopics</td>
                            <td class="text-center">@item.TotalReplies</td>
                            <td class="text-center">@item.Status</td>
                            <td>
                                <a href="/admin/members/edit/@item.Id" class="btn btn-secondary" role="button">@Loc["Edit"]</a>
                                <a href="/admin/members/activity/@item.Id" class="btn btn-secondary" role="button">@Loc["Activity"]</a>
                                @if (item.Status == StatusType.Active)
                                {
                                    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#confirm-modal-suspend" @onclick="() => SetSuspendId(item.Id)">@Loc["Suspend"]</button>
                                }

                                @if (item.Status == StatusType.Suspended)
                                {
                                    <button type="button" class="btn btn-warning" @onclick="@(async () => await ReinstateAsync(item.Id))">@Loc["Reinstate"]</button>
                                }

                                @if (item.Status != StatusType.Deleted)
                                {
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirm-modal" @onclick="() => SetDeleteId(item.Id)">@Loc["Delete"]</button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-warning disabled">@Loc["Suspend"]</button>
                                    <button type="button" class="btn btn-danger disabled">@Loc["Delete"]</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-3">
                <Pager TotalPages="Model.Members.TotalPages" OnLoadDataCallback="@ChangePageAsync"></Pager>
            </div>

            <ConfirmModal Id="confirm-modal-suspend" 
                          Title="@Loc["Suspend"]"
                          Body="@Loc["Are you sure you want to suspend this member?"]"
                          Button="@Loc["Suspend"]"
                          CssClass="warning"
                          OnClickCallback="@SuspendAsync" />

            <ConfirmModal Title="@Loc["Delete"]"
                          Body="@Loc["Are you sure you want to delete this member?"]"
                          Button="@Loc["Delete"]"
                          OnClickCallback="@DeleteAsync" />
        }
    }
}
