@layout AdminLayout
@page "/admin/forums/create"
@page "/admin/forums/create/{categoryId:guid}"
@using Atlas.Models.Admin.Forums
@attribute [Authorize(Policy = "Admin")]
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IStringLocalizer<AdminResources> Loc

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">@Loc["Home"]</a></li>
        <li class="breadcrumb-item"><a href="/admin/forums">@Loc["Forums"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Loc["Create New Forum"]</li>
    </ol>
</nav>

<h3 class="mb-3">@Loc["Create New Forum"]</h3>

@if (Model == null)
{
    <Loading />
}
else
{
    <Form Model="Model" Button="@Loc["Save"]" OnValidSubmit="@SaveAsync"></Form>
}

@code {
    [Parameter] public Guid? CategoryId { get; set; } = null;
    private FormComponentModel Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var requestUri = CategoryId == null
            ? "api/admin/forums/create"
            : $"api/admin/forums/create/{CategoryId}";

        Model = await Http.GetFromJsonAsync<FormComponentModel>(requestUri);
    }

    private async Task SaveAsync()
    {
        await Http.PostAsJsonAsync("api/admin/forums/save", Model.Forum);
        NavigationManager.NavigateTo($"/admin/forums/{Model.Forum.CategoryId}");
    }
}
