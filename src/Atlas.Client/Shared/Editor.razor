@inherits Atlas.Client.Components.Shared.EditorComponent

<div class="form-group">
    <ul class="nav nav-tabs" id="tabLinks" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="text-tab" data-toggle="tab" href="#text" role="tab" aria-controls="text" aria-selected="true">@Loc["Text"]</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="preview-tab" data-toggle="tab" href="#preview" role="tab" aria-controls="preview" aria-selected="false" @onclick="@PreviewAsync">@Loc["Preview"]</a>
        </li>
    </ul>
    <div class="tab-content" id="tabContent">
        <div class="tab-pane fade show active" id="text" role="tabpanel" aria-labelledby="text-tab">
            <InputTextArea id="content" @bind-Value="Value" @oninput="OnValueChanged" Rows="@Rows" Class="form-control" Style="border:none;" Placeholder="@Loc["Your text here..."]" />
        </div>
        <div class="tab-pane fade pt-3 pl-4" id="preview" role="tabpanel" aria-labelledby="preview-tab">
            @if (Preview == null)
            {
                <Loading></Loading>
            }
            else
            {
                @((MarkupString)Preview)
            }
        </div>
    </div>
    <ValidationMessage For="@(() => Value)" />
</div>
