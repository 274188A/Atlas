@page "/member/{id:guid}"
@using Atlas.Models.Public

@inject AnonymousService Service;

@if (Model == null)
{
    <Loading />
}
else
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Member.DisplayName</li>
        </ol>
    </nav>

    <div class="row m-0">
        <div class="col-md-2 text-center">
            <Avatar GravatarHash="@Model.Member.GravatarHash" GravatarSize="120"></Avatar>

            <h4 class="mb-4">@Model.Member.DisplayName</h4>

            <div class="border border-secondary rounded p-2 bg-light text-center mb-3 mx-auto" style="width: 8rem;">
                Topics: <span class="font-weight-bold">@Model.Member.TotalTopics</span>
            </div>

            <div class="border border-secondary rounded p-2 bg-light text-center mx-auto" style="width: 8rem;">
                Replies: <span class="font-weight-bold">@Model.Member.TotalReplies</span>
            </div>

        </div>
        <div class="col-md-10">
            &nbsp;
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid Id { get; set; }

    private MemberPageModel Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Model = await Service.GetFromJsonAsync<MemberPageModel>($"api/public/member/{Id}");
    }
}