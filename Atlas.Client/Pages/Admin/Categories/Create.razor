@page "/admin/categories/create"
@using Atlas.Shared.Admin.Categories.Models
@attribute [Authorize(Policy = "Admin")]
@inject HttpClient Http
@inject NavigationManager NavigationManager

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item"><a href="/admin/categories">Categories</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Title</li>
    </ol>
</nav>

<h3 class="mb-3">@Title</h3>

@if (Model == null)
{
    <Loading />
}
else
{
    <Form Model="Model" Button="Save" OnValidSubmit="@SaveAsync"></Form>
}

@code {
    private const string Title = "Create New Category";
    private FormModel Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Model = await Http.GetFromJsonAsync<FormModel>("api/admin/categories/create");
    }

    private async Task SaveAsync()
    {
        await Http.PostAsJsonAsync($"api/admin/categories/save", Model.Category);
        NavigationManager.NavigateTo("/admin/categories");
    }
}
