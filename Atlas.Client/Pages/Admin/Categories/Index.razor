@page "/admin/categories"
@using Atlas.Shared.Admin.Categories.Models
@attribute [Authorize(Policy = "Admin")]
@inject HttpClient Http

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Title</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-6">
        <h3 class="mb-3">@Title</h3>
    </div>
    <div class="col-md-6 text-right mb-3">
        <a href="/admin/categories/create" class="btn btn-primary" role="button">Create New</a>
    </div>
</div>

@if (Model == null)
{
    <Loading />
}
else if (Model.Categories.Count == 0)
{
    <NoRecords />
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">&nbsp;</th>
                <th scope="col">Name</th>
                <th scope="col">Total Forums</th>
                <th scope="col">Total Topics</th>
                <th scope="col">Total Replies</th>
                <th scope="col">Permission Set</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td class="text-center">
                        @if (item.SortOrder > 1)
                        {
                            <button type="button" class="btn btn-link btn-sm" @onclick="() => MoveUp(item.Id)">
                                <span class="fas fa-arrow-up"></span>
                            </button>
                        }
                        @if (item.SortOrder < Model.Categories.Count)
                        {
                            <button type="button" class="btn btn-link btn-sm" @onclick="() => MoveDown(item.Id)">
                                <span class="fas fa-arrow-down"></span>
                            </button>
                        }
                    </td>
                    <td>@item.Name</td>
                    <td class="text-center">@item.TotalForums</td>
                    <td class="text-center">@item.TotalTopics</td>
                    <td class="text-center">@item.TotalReplies</td>
                    <td>@item.PermissionSetName</td>
                    <td>
                        <a href="/admin/categories/edit/@item.Id" class="btn btn-secondary" role="button">Edit</a>
                        <a href="/admin/forums/@item.Id" class="btn btn-secondary" role="button">Forums</a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirm-modal" data-id="@item.Id" @onclick="() => SetDeleteId(item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <ConfirmModal Title="Delete Category"
                  Body="Are you sure you want to delete this Category and all associated Forums?"
                  Button="Delete"
                  OnClickCallback="@DeleteAsync" />
}

@code {
    private const string Title = "Categories";
    private IndexModel Model { get; set; }
    private Guid DeleteId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Model = await Http.GetFromJsonAsync<IndexModel>("api/admin/categories/list");
    }

    private async Task MoveUp(Guid id)
    {
        await Http.PostAsJsonAsync("api/admin/categories/move-up", id);
        await OnInitializedAsync();
    }

    private async Task MoveDown(Guid id)
    {
        await Http.PostAsJsonAsync("api/admin/categories/move-down", id);
        await OnInitializedAsync();
    }

    protected void SetDeleteId(Guid Id)
    {
        DeleteId = Id;
    }

    protected async Task DeleteAsync(MouseEventArgs e)
    {
        await Http.DeleteAsync($"api/admin/categories/delete/{DeleteId}");
        await OnInitializedAsync();
    }
}
