@page "/admin/forums/edit/{id:guid}"
@using Atlas.Shared.Models.Admin.Forums
@attribute [Authorize(Policy = "Admin")]
@inject HttpClient Http
@inject NavigationManager NavigationManager

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item"><a href="/admin/forums">Forums</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Title</li>
    </ol>
</nav>

<h3 class="mb-3">@Title</h3>

@if (Model == null)
{
    <Loading />
}
else
{
    <Form Model="Model" Button="Update" OnValidSubmit="@UpdateAsync"></Form>
    <TargetEvents Id="Id"></TargetEvents>
}

@code {
    private const string Title = "Edit Forum";
    [Parameter] public Guid Id { get; set; }
    private FormModel Model { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        Model = await Http.GetFromJsonAsync<FormModel>($"api/admin/forums/edit/{Id}");
    }

    private async Task UpdateAsync()
    {
        await Http.PostAsJsonAsync($"api/admin/forums/update", Model.Forum);
        NavigationManager.NavigateTo($"/admin/forums/{Model.Forum.ForumGroupId}");
    }
}
