@layout AdminLayout
@page "/admin/permission-sets/edit/{id:guid}"
@using Atlas.Models.Admin.PermissionSets
@attribute [Authorize(Policy = "Admin")]
@inject HttpClient Http
@inject NavigationManager NavigationManager

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
        <li class="breadcrumb-item"><a href="/admin/permission-sets">Permission Sets</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Title</li>
    </ol>
</nav>

<h3 class="mb-3">@Title</h3>

@if (Model == null)
{
    <Loading />
}
else
{
    <Form Model="Model" Button="Update" OnValidSubmit="@UpdateAsync"></Form>
    <TargetEvents Id="Id"></TargetEvents>
}

@code {
    private const string Title = "Edit Permission Set";
    [Parameter] public Guid Id { get; set; }
    private FormComponentModel Model { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        Model = await Http.GetFromJsonAsync<FormComponentModel>($"api/admin/permission-sets/edit/{Id}");
    }

    private async Task UpdateAsync()
    {
        await Http.PostAsJsonAsync($"api/admin/permission-sets/update", Model.PermissionSet);
        NavigationManager.NavigateTo("/admin/permission-sets");
    }
}
