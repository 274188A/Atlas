@page
@model Atlas.Areas.Admin.Pages.ForumGroups.IndexModel
@{
    ViewData["Title"] = "Forum Groups";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Total Topics</th>
            <th scope="col">Total Replies</th>
            <th scope="col">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var @group in Model.ForumGroups)
    {
        <tr>
            <td>@group.Name</td>
            <td>@group.TotalTopics</td>
            <td>@group.TotalReplies</td>
            <td>
                <a class="btn btn-primary" asp-area="Admin" asp-page="/ForumGroups/Edit" asp-route-id="@group.Id" role="button">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>