@page
@model Atlas.Areas.Admin.Pages.ForumGroups.EditModel

@{
    ViewData["Title"] = "Edit Forum Group";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ForumGroup.Id" />
            <div class="form-group">
                <label asp-for="ForumGroup.Name" class="control-label"></label>
                <input asp-for="ForumGroup.Name" class="form-control" />
                <span asp-validation-for="ForumGroup.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ForumGroup.PermissionSetId" class="control-label"></label>
                <select asp-for="ForumGroup.PermissionSetId" class="form-control" asp-items="ViewBag.PermissionSetId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
